<main>
  <div class="container">
    <div class="row">

     {{#each results}}
      <div class="col s12 m4">
        <div class="card grey lighten-4">
          <div class="card-content">
             <a href="{{this.link}}"><span class="card-title">{{this.title}}</span></a>
             <p>{{this.summary}}</p>
          </div>
           <div class="card-action">
              <a href="#">Save Article</a>
              <a href="#">Comment</a>
            </div>
        </div>
      </div>
      {{/each}}
    </div>
</main>